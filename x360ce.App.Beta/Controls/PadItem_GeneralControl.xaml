<UserControl
    x:Class="x360ce.App.Controls.PadItem_GeneralControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:x360ce.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="This"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!--  StackPanel  -->
                    <Style x:Key="StackPanelRight" TargetType="StackPanel">
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>
                    <Style x:Key="StackPanelLeft" TargetType="StackPanel">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>
                    <Style BasedOn="{StaticResource TextBox_Default}" TargetType="TextBox">
                        <Setter Property="Width" Value="75" />
                    </Style>
                    <!--  Menu template  -->
                    <ControlTemplate x:Key="ReusableMenuTemplate" TargetType="Menu">
                        <Grid>
                            <Border
                                Name="MenuBorder"
                                Width="26"
                                Height="26"
                                Padding="6"
                                VerticalAlignment="Center"
                                Background="{StaticResource BackgroundDark}"
                                CornerRadius="5">
                                <Viewbox>
                                    <Path
                                        Name="Arrow"
                                        Width="10"
                                        Height="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 0,0 L 10,0 L 5,5 Z"
                                        Fill="Black"
                                        RenderTransformOrigin="0.5,0.5" />
                                </Viewbox>
                            </Border>
                            <Menu Background="Transparent" Tag="{TemplateBinding Tag}">
                                <MenuItem
                                    Width="26"
                                    Height="26"
                                    Click="MenuItem_Click"
                                    Opacity="0"
                                    Visibility="Visible" />
                            </Menu>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MenuBorder" Property="Background" Value="{StaticResource BackgroundDarkSelected}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            VerticalAlignment="Top">

            <!--  LEFT  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <TextBox
                    Name="LeftTextBox"
                    Margin="29,3,3,3"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    IsReadOnly="True"
                    Text="0" />
                <Label
                    x:Name="LeftLabel"
                    x:FieldModifier="public"
                    Content="LEFT"
                    Opacity="0.3" />
            </StackPanel>
            <!--  LeftTrigger  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftTriggerTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftTriggerTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftTriggerLabel" Content="Trigger" />
            </StackPanel>
            <!--  LeftShoulder  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftShoulderTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftShoulderTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftShoulderLabel" Content="Bumper" />
            </StackPanel>
            <!--  ButtonBack  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=ButtonBackTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="ButtonBackTextBox" x:FieldModifier="public" />
                <Label x:Name="ButtonBackLabel" Content="Back" />
            </StackPanel>
            <!--  ButtonStart  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=ButtonStartTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="ButtonStartTextBox" x:FieldModifier="public" />
                <Label x:Name="ButtonStartLabel" Content="Start" />
            </StackPanel>

            <!--  ButtonGuide  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=ButtonGuideTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="ButtonGuideTextBox" x:FieldModifier="public" />
                <Label x:Name="ButtonGuideLabel" Content="Guide" />
            </StackPanel>
            <!--  DPad  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=DPadTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="DPadTextBox" x:FieldModifier="public" />
                <Label x:Name="DPadLabel" Content="D-Pad" />
            </StackPanel>
            <!--  LeftThumb  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <TextBox
                    x:Name="LeftThumbTextBox"
                    Margin="29,0,0,0"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    IsReadOnly="True"
                    Text="0:0" />
            </StackPanel>
            <!--  LeftThumbAxisX  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbAxisXTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbAxisXTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbAxisXLabel" Content="Stick Axis X" />
            </StackPanel>
            <!--  LeftThumbAxisY  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbAxisYTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbAxisYTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbAxisYLabel" Content="Stick Axis Y" />
            </StackPanel>
            <!--  LeftThumbButton  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbButtonTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbButtonTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbButtonLabel" Content="Stick Button" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0">
            <!--  LeftThumbUp  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbUpTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbUpTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbUpLabel" Content="Stick Up" />
            </StackPanel>
            <!--  LeftThumbLeft  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbLeftTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbLeftTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbLeftLabel" Content="Stick Left" />
            </StackPanel>
            <!--  LeftThumbRight  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbRightTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbRightTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbRightLabel" Content="Stick Right" />
            </StackPanel>
            <!--  LeftThumbDown  -->
            <StackPanel Style="{StaticResource StackPanelLeft}">
                <Menu Tag="{Binding ElementName=LeftThumbDownTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
                <TextBox x:Name="LeftThumbDownTextBox" x:FieldModifier="public" />
                <Label x:Name="LeftThumbDownLabel" Content="Stick Down" />
            </StackPanel>
        </StackPanel>

        <!--  Remap All  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Name="RemapAllButton" Click="RemapAllButton_Click">
                <StackPanel>
                    <ContentControl Content="{StaticResource Icon_Record}" />
                    <Label Content="Remap All" />
                </StackPanel>
            </Button>
            <ComboBox
                x:Name="MapNameComboBox"
                Margin="0,3,3,3"
                DisplayMemberPath="Name"
                SelectionChanged="MapNameComboBox_SelectionChanged" />
        </StackPanel>

        <local:PadItem_General_XboxImageControl
            x:Name="XboxImage"
            Grid.Row="1"
            Grid.Column="1"
            Width="Auto"
            Height="Auto"
            MaxWidth="400"
            MaxHeight="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="2"
            Orientation="Vertical">

            <!--  RIGHT  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label
                    x:Name="RightLabel"
                    x:FieldModifier="public"
                    Content="RIGHT"
                    Opacity="0.3" />
                <TextBox
                    x:Name="RightTextBox"
                    Margin="3,3,29,3"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    IsReadOnly="True"
                    Text="0" />
            </StackPanel>

            <!--  RightTrigger  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightTriggerLabel" Content="Trigger" />
                <TextBox x:Name="RightTriggerTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightTriggerTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>

            <!--  RightShoulder  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightShoulderLabel" Content="Bumper" />
                <TextBox x:Name="RightShoulderTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightShoulderTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>

            <!--  ButtonY  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="ButtonYLabel" Content="Y Button" />
                <TextBox x:Name="ButtonYTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=ButtonYTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  ButtonX  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="ButtonXLabel" Content="X Button" />
                <TextBox x:Name="ButtonXTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=ButtonXTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  ButtonB  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="ButtonBLabel" Content="B Button" />
                <TextBox x:Name="ButtonBTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=ButtonBTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  ButtonA  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="ButtonALabel" Content="A Button" />
                <TextBox x:Name="ButtonATextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=ButtonATextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>

            <!--  RightThumb  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <TextBox
                    x:Name="RightThumbTextBox"
                    Margin="0,0,29,0"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    IsReadOnly="True"
                    Text="0:0" />
            </StackPanel>
            <!--  RightThumbAxisX  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbAxisXLabel" Content="Stick Axis X" />
                <TextBox x:Name="RightThumbAxisXTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbAxisXTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  RightThumbAxisY  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbAxisYLabel" Content="Stick Axis Y" />
                <TextBox x:Name="RightThumbAxisYTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbAxisYTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  RightThumbButton  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbButtonLabel" Content="Stick Button" />
                <TextBox x:Name="RightThumbButtonTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbButtonTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
        </StackPanel>

        <!--  DPad  -->
        <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center">
            <!--  DPadUp  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="DPadUpLabel" Content="D-Pad Up" />
                <TextBox x:Name="DPadUpTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=DPadUpTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  DPadLeft  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="DPadLeftLabel" Content="D-Pad Left" />
                <TextBox x:Name="DPadLeftTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=DPadLeftTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  DPadRight  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="DPadRightLabel" Content="D-Pad Right" />
                <TextBox x:Name="DPadRightTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=DPadRightTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  DPadDown  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="DPadDownLabel" Content="D-Pad Down" />
                <TextBox x:Name="DPadDownTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=DPadDownTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
        </StackPanel>

        <!--  Right Thumb  -->
        <StackPanel Grid.Row="2" Grid.Column="2">
            <!--  RightThumbUp  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbUpLabel" Content="Stick Up" />
                <TextBox x:Name="RightThumbUpTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbUpTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  RightThumbLeft  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbLeftLabel" Content="Stick Left" />
                <TextBox x:Name="RightThumbLeftTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbLeftTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  RightThumbRight  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbRightLabel" Content="Stick Right" />
                <TextBox x:Name="RightThumbRightTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbRightTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
            <!--  RighthumbDown  -->
            <StackPanel Style="{StaticResource StackPanelRight}">
                <Label x:Name="RightThumbDownLabel" Content="Stick Down" />
                <TextBox x:Name="RightThumbDownTextBox" x:FieldModifier="public" />
                <Menu Tag="{Binding ElementName=RightThumbDownTextBox}" Template="{StaticResource ReusableMenuTemplate}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
