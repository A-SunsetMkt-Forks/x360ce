<UserControl
	x:Class="x360ce.App.Controls.AxisMapControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:x360ce.App.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/x360ce.Engine;component/JocysCom/Controls/Themes/Default.xaml" />
				<ResourceDictionary Source="/x360ce.Engine;component/JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="/x360ce;component/Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<GroupBox Header="Thumb">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<StackPanel
					Grid.Row="0"
					Grid.Column="0"
					HorizontalAlignment="Stretch"
					Orientation="Horizontal">
					<Label Name="DInputLabel" HorizontalAlignment="Left" Content="DI:" />
					<Label
						Name="DInputValueLabel"
						Grid.Row="0"
						Grid.Column="1"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Right"
						Content="0"
						Foreground="Green" />
				</StackPanel>
				<StackPanel
					Grid.Row="0"
					Grid.Column="1"
					HorizontalAlignment="Stretch"
					Orientation="Horizontal">
					<Label Name="XInputLabel" HorizontalAlignment="Left" Content="XI:" />
					<Label
						Name="XInputValueLabel"
						Grid.Row="0"
						Grid.Column="1"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Right"
						Content="0"
						Foreground="Blue" />
				</StackPanel>

				<Border
					Grid.Row="1"
					Grid.RowSpan="4"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Background="White"
					BorderBrush="Gray"
					BorderThickness="1">
					<!--  This image uses a Drawing object for its source.  -->
					<Image>
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<GeometryDrawing>
										<GeometryDrawing.Geometry>
											<GeometryGroup>
												<EllipseGeometry Center="50,50" RadiusX="75" RadiusY="75" />
											</GeometryGroup>
										</GeometryDrawing.Geometry>
										<GeometryDrawing.Pen>
											<Pen Brush="Black" Thickness="10" />
										</GeometryDrawing.Pen>
									</GeometryDrawing>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
				</Border>


				<Menu
					Name="PresetMenuStrip"
					Grid.Row="0"
					Grid.Column="4"
					VerticalAlignment="Center">
					<MenuItem Name="ApplyPresetMenuItem" Header="Click Here to Apply Preset">
						<MenuItem Name="P_0_0_0_MenuItem" Header="Clear" />
						<MenuItem Name="P_5_100_0_MenuItem" Header="5% DeadZone, 100% Controller Anti-DeadZone" />
						<MenuItem Name="P_0_100_0_MenuItem" Header="100% Controller Anti-DeadZone" />
						<MenuItem Name="P_0_80_0_MenuItem" Header="80% Controller Anti-DeadZone" />
						<MenuItem Name="P_0_60_0_MenuItem" Header="60% Controller Anti-DeadZone" />
						<MenuItem Name="P_0_40_0_MenuItem" Header="40% Controller Anti-DeadZone" />
						<MenuItem Name="P_0_20_0_MenuItem" Header="20% Controller Anti-DeadZone" />
					</MenuItem>
				</Menu>

				<Label
					Name="AntiDeadZoneLabel"
					Grid.Row="1"
					Grid.Column="2"
					VerticalAlignment="Center"
					Content="Anti-Dead Zone" />

				<Slider
					Name="AntiDeadZoneTrackBar"
					Grid.Row="1"
					Grid.Column="3"
					Width="200"
					VerticalAlignment="Center"
					LargeChange="10"
					Maximum="100" />
				<TextBox
					Name="AntiDeadZoneTextBox"
					Grid.Row="1"
					Grid.Column="4"
					Width="50"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Right"
					IsReadOnly="True"
					IsTabStop="False"
					Text="0 %" />
				<Label
					Name="DeadZoneLabel"
					Grid.Row="2"
					Grid.Column="2"
					VerticalAlignment="Center"
					Content="Dead Zone" />
				<Slider
					Name="DeadZoneTrackBar"
					Grid.Row="2"
					Grid.Column="3"
					Width="200"
					VerticalAlignment="Center"
					LargeChange="10"
					Maximum="100" />

				<TextBox
					Name="DeadZoneTextBox"
					Grid.Row="2"
					Grid.Column="4"
					Width="50"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Right"
					IsReadOnly="True"
					IsTabStop="False"
					Text="0 %" />

				<Label
					Name="SensitivityLabel"
					Grid.Row="3"
					Grid.Column="2"
					VerticalAlignment="Center"
					Content="Sensitivity" />
				<Slider
					Name="SensitivityTrackBar"
					Grid.Row="3"
					Grid.Column="3"
					Width="200"
					VerticalAlignment="Center"
					LargeChange="10"
					Maximum="100" />
				<StackPanel Grid.Row="3" Grid.Column="4" Orientation="Horizontal">
					<TextBox
						Name="SensitivityTextBox"
						Width="50"
						HorizontalAlignment="Left"
						HorizontalContentAlignment="Right"
						IsReadOnly="True"
						IsTabStop="False"
						Text="0 %" />
					<CheckBox Name="SensitivityCheckBox" Checked="SensitivityCheckBox_CheckedChanged" Content="Invert" />
					<xctk:IntegerUpDown
						Name="SensitivityNumericUpDown"
						MinWidth="75"
						VerticalAlignment="Center"
						Maximum="100"
						Minimum="-100"
						ValueChanged="SensitivityNumericUpDown_ValueChanged"
						Value="0" />
				</StackPanel>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
