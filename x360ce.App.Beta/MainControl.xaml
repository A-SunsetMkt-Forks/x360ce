<UserControl
	x:Class="x360ce.App.MainControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:JcControls="clr-namespace:JocysCom.ClassLibrary.Controls;assembly=x360ce.Engine"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:x360ce.App"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	d:DesignHeight="900"
	d:DesignWidth="1600"
	Loaded="UserControl_Loaded"
	Unloaded="UserControl_Unloaded"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<JcControls:InfoControl x:Name="InfoPanel" x:FieldModifier="public" RightIconContent="{StaticResource Icon_gamepad}" />
		<StackPanel Orientation="Horizontal" Grid.Row="1">

		<!--Add Game Program-->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
				<Border Style="{StaticResource BorderDescriptionNormal}" Padding="6,3,6,3" Margin="3,3,0,0">
					<Label HorizontalAlignment="Center">STEP 1 - Add and select application to configure.</Label>
				</Border>
				<StackPanel Orientation="Horizontal" Grid.Row="1">
					<Button Name="AddGameButton" Click="AddGameButton_Click">
						<StackPanel>
							<ContentControl Content="{StaticResource Icon_Add}" />
							<Label Content="Add..." />
						</StackPanel>
					</Button>
					<Button Name="TestButton" Click="TestButton_Click" Margin="0,3,3,3">
						<StackPanel>
							<ContentControl Content="{StaticResource Icon_test}" />
							<Label Content="Test..." />
						</StackPanel>
					</Button>
					<Button Name="SaveAllButton" Click="SaveAllButton_Click"  Margin="0,3,0,3">
						<StackPanel>
							<ContentControl Content="{StaticResource Icon_save}" />
							<Label Content="Save All Settings" />
						</StackPanel>
					</Button>
				</StackPanel>
				<ListBox Grid.Row="2" x:Name="GameToCustomizeComboBox" Margin="3,0,0,3">
					<ListBox.ItemContainerStyle>
						<Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItem_Default}">
							<Setter Property="Padding" Value="6"/>
							<Setter Property="Background" Value="White"/>
							<Setter Property="Margin" Value="0,0,0,1" />
						</Style>
					</ListBox.ItemContainerStyle>
				</ListBox>
			</Grid>
			
		<local:MainBodyControl x:Name="MainBodyPanel" Margin="3" />
		</StackPanel>
		
		<StatusBar Grid.Row="2" HorizontalAlignment="Left">
			<StatusBarItem>
				<Label x:Name="StatusTimerLabel" Content="StatusTimerLabel" />
			</StatusBarItem>
		</StatusBar>
		<StatusBar Grid.Row="2" HorizontalAlignment="Right">
			<StatusBarItem>
				<Label x:Name="UpdateFrequencyLabel" Content="Hz:0" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="FormUpdateFrequencyLabel" Content="Hz:0" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="UpdateDevicesStatusLabel" Content="D:0" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="CloudMessagesLabel" Content="M:0" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="StatusEventsLabel" Content="StatusEventsLabel" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="StatusSaveLabel" Content="StatusSaveLabel" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="StatusIsAdminLabel" Content="StatusIsAdminLabel" />
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<StackPanel Orientation="Horizontal">
					<ContentControl
						x:Name="StatusErrorsIcon"
						Width="16"
						Height="16"
						Content="{StaticResource Icon_error}" />
					<Label
						x:Name="StatusErrorsLabel"
						Margin="3,0,0,0"
						Content="StatusErrorsLabel"
						PreviewMouseDown="StatusErrorsLabel_PreviewMouseDown" />
				</StackPanel>
			</StatusBarItem>
			<Separator />
			<StatusBarItem>
				<Label x:Name="StatusDllLabel" Content="StatusDllLabel" />
			</StatusBarItem>
		</StatusBar>
	</Grid>
</UserControl>
