<ResourceDictionary
	x:Class="JocysCom.ClassLibrary.Controls.Themes.Default"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<Style TargetType="Button">
		<Setter Property="Padding" Value="8,4,8,4" />
	</Style>

	<Style TargetType="Window">
		<Setter Property="Padding" Value="4" />
	</Style>

	<Style x:Key="TextBoxDefault" TargetType="TextBox">
		<Setter Property="Padding" Value="0,2,0,2" />

	</Style>

	<Style BasedOn="{StaticResource TextBoxDefault}" TargetType="TextBox" />

	<Style x:Key="TextBoxReadOnly" BasedOn="{StaticResource TextBoxDefault}" TargetType="TextBox">
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
		<Setter Property="IsReadOnly" Value="True" />
	</Style>

	<!--  Grid  -->

	<Style x:Key="DataGridDefault" TargetType="DataGrid">
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="CanUserAddRows" Value="False" />
		<Setter Property="CanUserDeleteRows" Value="False" />
		<Setter Property="GridLinesVisibility" Value="Horizontal" />
		<Setter Property="HeadersVisibility" Value="Column" />
		<Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
		<Setter Property="VerticalGridLinesBrush" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
		<Setter Property="VerticalScrollBarVisibility" Value="Auto" />
	</Style>

	<Style BasedOn="{StaticResource DataGridDefault}" TargetType="DataGrid" />

	<!--  Grid TextBlock ReadOnly  -->

	<Style x:Key="TextBlockCell" TargetType="TextBlock">
		<Setter Property="Padding" Value="4,2,4,2" />
		<Setter Property="Margin" Value="0,0,0,0" />
	</Style>

	<Style x:Key="TextBlockRightCell" BasedOn="{StaticResource TextBlockCell}" TargetType="TextBlock">
		<Setter Property="TextAlignment" Value="Right" />
	</Style>

	<Style x:Key="TextBoxCell" TargetType="TextBox">
		<Setter Property="Padding" Value="3,1,3,1" />
		<Setter Property="Margin" Value="0,0,0,0" />
	</Style>

	<Style x:Key="TextBoxRightCell" BasedOn="{StaticResource TextBoxCell}" TargetType="TextBox">
		<Setter Property="TextAlignment" Value="Right" />
	</Style>

	<!--  DataGridTextColumn  -->

	<!--<Style x:Key="DataGridTextColumnDefault" TargetType="DataGridTextColumn">
		<Setter Property="ElementStyle" Value="{DynamicResource TextBlockCell}" />
		<Setter Property="EditingElementStyle" Value="{DynamicResource TextBoxCell}" />
	</Style>

	<Style BasedOn="{DynamicResource DataGridTextColumnDefault}" TargetType="DataGridTextColumn" />-->

</ResourceDictionary>
