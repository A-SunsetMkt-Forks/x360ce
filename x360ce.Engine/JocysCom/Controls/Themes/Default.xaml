<ResourceDictionary
	x:Class="JocysCom.ClassLibrary.Controls.Themes.Default"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<Style TargetType="Button">
		<Setter Property="Padding" Value="8,4,8,4" />
	</Style>

	<Style TargetType="Window">
		<Setter Property="Padding" Value="4" />
	</Style>

	<Style x:Key="TextBoxDefault" TargetType="TextBox">
		<Setter Property="Padding" Value="0,2,0,2" />

	</Style>

	<Style BasedOn="{StaticResource TextBoxDefault}" TargetType="TextBox" />

	<Style x:Key="TextBoxReadOnly" BasedOn="{StaticResource TextBoxDefault}" TargetType="TextBox">
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
		<Setter Property="IsReadOnly" Value="True" />
	</Style>

</ResourceDictionary>
